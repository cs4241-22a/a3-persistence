<div class="container">
  <h1>Here are your purchases,
    {{{username}}}.
    <div class="center-align">
      <a class="waves-effect waves-light btn deep-purple" href="/logout">Log Out</a>
    </div>
  </h1>

  <div class="row">
    <form class="col s12" id="purchase_form" action="">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Item Name" id="item_name" type="text" class="validate" />
          <label style="color: black;" for="item_name">Item Name</label>
        </div>
        <div class="input-field col s6">
          <input placeholder="Item Quantity" id="item_quantity" type="number"
            oninput="this.value = Math.round(this.value);" class="validate" />
          <label style="color: black;" for="item_quantity">Item Quantity</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Item Cost" id="item_cost" type="number" min="0.00" max="10000.00" step="0.01"
            class="validate" />
          <label style="color: black;" for="item_cost">Item Cost</label>
        </div>
        <div class="input-field col s6">
          <select id="payment_method">
            <option value="" disabled selected>Payment Method</option>
            <option value="credit_card">Credit Card</option>
            <option value="debit_card">Debit Card</option>
            <option value="cash">Cash</option>
          </select>
          <label style="color: black;" for="payment_method">Payment Method</label>
        </div>
      </div>
      <div class="center-align">
        <button class="btn waves-effect waves-light center-align deep-purple" type="submit" name="action">
          Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>

  <table id="item_table">
    <thead>
      <tr>
        <th>Item Name</th>
        <th>Item Cost</th>
        <th>Item Quantity</th>
        <th>Payment Method</th>
        <th>Total Amount</th>
      </tr>
    </thead>
  </table>

  <script type="module">
    import { getTableData, formSubmit } from "./js/scripts.js"; getTableData();
    document.querySelector("#purchase_form").addEventListener("submit",
      formSubmit);
  </script>

  <script></script>
</div>