  <body>
    <h2>Instructions:</h2>
    <ol>
      <li>Enter a task</li>
      <li>Enter the amount of days (points) you think it will take</li>
      <li>Enter the due date</li>
    </ol>
    <h2 class="task-entry-header">Task Entry <b>✓</b></h2>
    <p><em>Required</em> fields are in <em>blue</em> and marked with an <em>*</em></p>
    <form action="">
      <label for="task">Task * </label>
      <input type='text' id='task' placeholder="Enter task here" required><br>
      <label for="points">Points * </label>
      <input type='number' id='points' min = "1" value="1" required><br>
      <label for="dueDate">Due Date * </label>
      <input type='date' id='dueDate' placeholder="" min="1997-01-01" max="2050-12-31" required><br>
      <button type="submit" id = "addTask">Add Task</button>
    </form>
    <hr />
    <h2 class = "main-list"><b>To-Do</b> List <b>✓</b></h2>
    <table id="to-do-list">
      <thead id = "table-header">
      </thead>
      <tbody id = "table-body">
        <!-- put stuff here -->
      </tbody>
    </table>
    <hr />
    <button id = "completedTasks">View Completed Tasks</button>
    <button id = "hideCompletedTasks">Hide Completed Tasks</button>
    <h2 id = "completed-task-header">Completed <b>To-Do</b> List <b>✓</b></h2>
    <table id="completed-to-do-list">
      <thead id = "completed-table-header">
      </thead>
      <tbody id = "completed-table-body">
        <!-- put stuff here -->
      </tbody>
    </table>
