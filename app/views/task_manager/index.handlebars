<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <title>ðŸŒ‘ðŸ”­</title>
  </head>
  <body>
    <div class="bg-dark vh-100">
      <nav class="navbar navbar-expand-lg container-fluid fg">
        <div class="container mt-4">
          <span class="navbar-brand mb-0 h1 text-white">.moonwatch</span>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link text-white" href="#">Logout</a>
            </li>
          </ul>
        </div>
      </nav>
      <main class="container">
        <div class="d-flex justify-content-between align-items-end mb-4">
          <h1 class="mt-5 d-inline-block mb-0 fw-bold">Task Manager</h1>
          <button
            type="button"
            class="btn btn-outline-light py-2 px-4"
            data-bs-toggle="modal"
            data-bs-target="#task-modal"
          >
            Add
          </button>
        </div>
        {{! ================================================================================== }}
        <div
          class="modal fade"
          id="task-modal"
          tabindex="-1"
          aria-labelledby="task-modalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title text-dark fw-bold">Add a new task</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <form action="/add" method="POST" class="mx-4">
                  <div class="row">
                    <div class="form-outline mb-3 col-md-6">
                      <label
                        for="priority"
                        class="form-label text-dark fw-bold"
                      >Priority
                      </label>
                      <select
                        id="priority"
                        class="form-select"
                        aria-label="Default select example"
                      >
                        <option selected>Choose here...</option>
                        <option value="High">High</option>
                        <option value="Medium">Medium</option>
                        <option value="Low">Low</option>
                      </select>
                    </div>
                    <div class="form-outline mb-3 col-md-6">
                      <label
                        for="type"
                        class="form-label text-dark fw-bold"
                      >Type
                      </label>
                      <select
                        id="type"
                        class="form-select"
                        aria-label="Default select example"
                      >
                        <option selected>Choose here...</option>
                        <option value="MQP">MQP</option>
                        <option value="Academic">Academic</option>
                        <option value="Work">Work</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-outline mb-3">
                    <label
                      for="title"
                      class="form-label text-dark fw-bold"
                    >Title</label>
                    <input
                      id="title"
                      type="text"
                      class="form-control form-control-lg fs-6"
                    />
                  </div>
                  <div class="form-outline mb-4">
                    <label
                      for="description"
                      class="form-label text-dark fw-bold"
                    >Description </label>
                    <textarea
                      id="description"
                      type="text"
                      class="form-control form-control-lg fs-6"
                      style="height: 10rem"
                    ></textarea>
                  </div>
                  <button type="button" class="btn btn-dark w-100 btn-lg">Save
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        {{! ================================================================================== }}
        {{#each data}}
          <div
            class="card rounded shadow w-100 mb-3"
            style="background-color: #2d3238"
            id="{{this._id}}"
          >
            <div id="card-group">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-end">
                  <h6 class="card-title fw-bold">{{this.title}}</h6>
                  <button
                    type="button"
                    class="btn-close btn-close-white"
                    aria-label="Close"
                    onclick="remove(event)"
                    id="{{this._id}}"
                  >
                  </button>
                </div>
                <h6 class="card-subtitle my-2">
                  <span class="badge bg-light text-black">Due on
                    {{this.deadline_date}}</span>
                  <span class="badge bg-danger">{{this.priority}} Urgency</span>
                  <span class="badge bg-primary">{{type}}</span>
                </h6>
                <p class="card-text my-3">{{{this.description}}}</p>
                <hr />
                <div class="card-footer text-muted">Created on
                  {{this.creation_date}}</div>
              </div>
            </div>
          </div>
        {{/each}}
        {{! ================================================================================== }}
      </main>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="/js/request.js"></script>
  </body>
</html>