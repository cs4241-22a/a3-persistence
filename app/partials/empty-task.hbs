{{! Empty task partial for editing and adding }}
<div
  class="card rounded shadow w-100 mb-3"
  style="background-color: #343a40; display: none"
  id="empty-task"
>
  <form class="card-body" id="form">
    <input readonly value="none" id="task-id" class="d-none" />
    <div>
      <input
        id="title-edit"
        type="text"
        name="title"
        class="card-title form-control bg-dark border-0 text-white"
        placeholder="Task name"
        aria-label="Task name"
      />
    </div>
    <div class="card-subtitle my-3 h6 row w-100 gx-1">
      <div class="col-md-2">
        <input
          id="deadline-edit"
          aria-label="deadline"
          name="deadline_date"
          type="date"
          class="form-control form-control-sm text-white border-0 bg-dark"
        />
      </div>
      <div class="col-md-2">
        <select
          id="type-edit"
          name="type"
          class="form-select form-select-sm text-white border-dark bg-dark"
        >
          <option selected disabled>Type</option>
          <option value="MQP">MQP</option>
          <option value="Academic">Academic</option>
          <option value="Work">Work</option>
          <option value="Other">Other</option>
        </select>
      </div>
      <div class="col-md-2">
        <select
          id="priority-edit"
          name="priority"
          class="form-select form-select-sm text-white border-dark bg-dark"
        >
          <option selected disabled>Priority</option>
          <option value="High">High</option>
          <option value="Medium">Medium</option>
          <option value="Low">Low</option>
        </select>
      </div>
    </div>
    <div class="card-text my-3">
      <textarea
        type="text"
        name="description"
        id="description-edit"
        class="form-control bg-dark border-0 text-white"
        placeholder="Description"
        aria-label="Description"
        style="height: 10rem"
        name="hello"
      ></textarea>
    </div>
    <div>
      <button class="btn btn-danger" id="cancel">Cancel</button>
      <button
        class="btn btn-primary"
        id="submit"
        onclick="add(event)"
      >Submit</button>
    </div>
  </form>
</div>