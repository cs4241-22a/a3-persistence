<div
  class="card rounded shadow w-100 mb-3"
  style="background-color: #2d3238"
  id="{{this._id}}"
>
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-end">
      <p class="card-title fw-bold h6">{{this.title}}</p>
      <button
        type="button"
        class="btn-close btn-close-white"
        aria-label="Close"
        onclick="remove(event, this)"
      >
      </button>
    </div>
    <p class="card-subtitle my-2 h6">
      <span class="badge bg-light text-black">Due on
        {{this.deadline_date}}</span>
      <span class="badge bg-danger">{{this.priority}} Urgency</span>
      <span class="badge bg-primary">{{type}}</span>
    </p>
    <p class="card-text my-3">{{{this.description}}}</p>
    <hr />
    <div class="card-footer text-muted">Created on
      {{this.creation_date}}</div>
  </div>
</div>